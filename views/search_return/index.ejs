<!DOCTYPE html>
<html>
  <head><% include ../partials/head %></head>
    <body >
    <div class="header">
      <nav><% include ../partials/navigation %></nav>
        <div class="container">
          <h3 class="center">Top 10 Payments in the past year.</h3>
          <a href="../user/mypage" title="">Go To Your Page</a>
        <div class="row">
        <div class="col s10 offset-s1">
          <%if(companies.length){ %>
          <% companies.forEach( function(companies){  %>
        <section>

        <h1 class="card-title"><%=companies.client_name%></h1>
            <br>
            <h2 class="money">$<%=companies.amount%></h2>
            <br>
          <span class="registrar">Registrant:<%=companies.registrant_name%></span>
          <br>
            <%if(companies.registrant_general_description){ %>
           Category:  <%=companies.registrant_general_description%>
           <% } %>
          <br>

          <span class="lobbyist"><%=companies.contact_full_name%></span>
          was most likely, the lobbyist retained for this particular issue.
          <br>
          <span class="transactionID">Transaction ID: <%=companies.id%></span>
          <p class="center">(use for further research)</p>




            <div class="card-action center">

            <form action='search/details' method='get' class="col s6" name=<%=companies.id%>>
              <input type="hidden" name="id" value=<%=companies.id%> />
              <button type="submit" class='red darken white-text btn-flat'>What's this money going towards?</button>
            </form>

              <button type="submit" class='saveBill blue darken white-text btn-flat'>Save</button>


          </div>

          </section>
          <% }) %>
          </div>
          </div>
          <% }else{ %>
          <li>No results</li>
          <% } %>
        </div>
      <script type="text/javascript" src="/js/script.js"></script>
      <script src='https://cdnjs.cloudflare.com/ajax/libs/d3/4.2.7/d3.min.js'></script>
</div>
</body>
</html>
