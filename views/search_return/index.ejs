<!DOCTYPE html>
<html>
  <head><% include ../partials/head %></head>
    <div class="header center">
      <body >
      <nav><% include ../partials/navigation %></nav>

        <div class="container">
        <div class="row">
          <div class="col">
          <%if(companies.length){ %>
          <% companies.forEach( function(companies){  %>
          <div class="card grey darken-1 ">
          <div class="card-content white-text ">
          <span class="card-title"><%=companies.client_name%></span>
            <p>$
              <strong><%=companies.amount%></strong>
              <br>
              <%=companies.client_parent_name%>
              <br>
              <%=companies.year%>
            </p>
            <p>Transaction ID <br><%=companies.transaction_id%></p>
          </div>
          <div class="card-action">
              <a href="billLink">View bill</a>
             <button class='saveBill blue darken'>Save</button>
          </div>
          </div>
          <% }) %>
          </div>
          <h4><%=companies.client_name%></h4>
          <canvas id="pieChart" width="600" height="600"></canvas>
          </div>
          <% }else{ %>
          <li>No Results found</li>
          <% } %>
        </div>

</body>
</div>
</html>
