<!DOCTYPE html>
<html>
<head><% include ../partials/head %></head>
<body >


<nav><% include ../partials/navigation %></nav>
<div class="container">
  <div class="row">
<div class="col s12 m9 l9">
  <h3 class="center">Top 10 Payments in the past year.</h3>
  </div>
    <div class="col s12 m3 l3">
      <a class="btn grey default mypage-link" href="../user/mypage" title="">Go To My Page</a>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m8 l8">
    <%if(companies.length){ %>
    <% companies.forEach( function(companies){  %>
    <section class="results">
        <span class="card-title"><%=companies.client_name%></span>
        <br>
        <span class="money">$<%=companies.amount%></span>
        <br>
        <span class="results-label">Registrant: </span><span class="registrar"><%=companies.registrant_name%></span>
        <%if(companies.registrant_general_description){ %>
        <br>
        <span class="results-label">Category:</span><%=companies.registrant_general_description%>
        <% } %>
        <br>
        <span class="results-label">Lobbyist: </span><span class="lobbyist"><%=companies.contact_full_name%></span>
        <br>
        <span class="results-label">Transaction ID: </span><span class="transactionID"><%=companies.id%></span>

        <div class="card-action center">
        <form action='search/details' method='get' class="col s6" name=<%=companies.id%>>
          <input type="hidden" name="id" value=<%=companies.id%> />
          <button type="submit" class='red darken white-text btn-flat'>Lobbying Topics</button>
        </form>
        <button type="submit" class='saveBill blue darken white-text btn-flat'>Save</button>
        </div>
    </section>
    <% }) %>
    <% }else{ %>
    <h4>Couldn't find any results.  Make sure that the company/organization isn't a part a of a larger entity.</h4>
    <% } %>

    </div>
    <div class="col s12 m3 offset-m1 l3 offset-l1">
    <div class="row">
    <section class= 'formEJS'><% include ../partials/form %></section>
    </div>
    </div>
    </div>
</div>
      <script type="text/javascript" src="/js/script.js"></script>
      <script src='https://cdnjs.cloudflare.com/ajax/libs/d3/4.2.7/d3.min.js'></script>


</body>
</html>
