<!DOCTYPE html>
<html>
  <head><% include ../partials/head %></head>
  <div class="header center white-textcontainer">
    <body >
    <nav><% include ../partials/navigation %></nav>
    <h1><%=user.fname%>'s Lobby List</h1>
    <div class="container">
      <div class="row">
        <div class="col s12 m6 result">
          <% if(user.favoriteArticles.length) { %>
            <%if(user.favoriteArticles.length) { %>
          <% user.favoriteArticles.forEach( function(article){  %>
          <section class="saved-content">
      <span class="card-title"><%=article.company%></span>
      <br>
      <span class="money"><%=article.amount%></span>
      <br>
      <span class="results-label">Registrant: </span><span class="registrar"><%=article.lobbyOrg%></span>
      <br>
      <span class="results-label">Lobbyist: </span><span class="lobbyist"><%=article.lobbyist%></span>
      <br>
      <span class="results-label">Transaction ID: </span><span class="transactionID"><%=article.transID%></span>
          <div class="card-action center">
          <button type="submit" class='deleteBill blue darken white-text btn-flat'>Delete</button>
          </div>

          </section>
          <% }) %>
          <% }else{ %>
          <h4>You don't have anything saved yet!</h4>
          <% } %>
          <% } %>
          </div>
          </div>

  </div>
   <script type="text/javascript" src="/js/script.js"></script>
  </body>
  </div>
</html>
