<!DOCTYPE html>
<html>
  <head><% include ../partials/head %></head>
  <div class="header center white-textcontainer">
    <body >
    <nav><% include ../partials/navigation %></nav>
      <h1><%= user.fname %> <%= user.lname %></h1>

  <div class="container">
  <h1>My Lobby List</h1>
  <% if(user.favoriteArticles.length) { %>
    <h1><%=user.fname%>'s Page</h1>
            <%if(user.favoriteArticles.length){ %>
          <% user.favoriteArticles.forEach( function(article){  %>
          <div class="row">
          <div class="col s12 m6 result">
          <div class="card blue-grey darken-1 ">
          <div class="card-content white-text ">
          <span class="card-title"><%=article.company%></span>
            <p>$
              <strong><%=article.amount%></strong>
              <br>
              <%=article.lobbyOrg%>
              <br>
              <%=article.lobbyist%>
            </p>
            <p>Transaction ID <br><%=article.transID%></p>
          </div>
          <div class="card-action">
              <a href="billLink">The bill</a>
             <button class='deleteBill'>Remove</button>
          </div>
          </div>
          </div>
          </div>
          <% }) %>
          <% }else{ %>
          <li>You don't have anything saved yet!</li>

          <% } %>
          <% } %>
  </div>
  </body>
  </div>
</html>
